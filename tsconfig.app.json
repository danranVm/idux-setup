{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["typings/*.d.ts", "packages/**/*", "packages/**/*.vue"],
  "exclude": [
    "packages/**/__tests__/*",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
